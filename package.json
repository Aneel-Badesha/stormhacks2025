{
  "name": "nfc-loyalty-app",
  "version": "1.0.0",
  "description": "NFC-based digital loyalty card system for small businesses",
  "private": true,
  "workspaces": [
    "mobile",
    "backend",
    "admin-dashboard"
  ],
  "scripts": {
    "mobile": "cd mobile && npm start",
    "backend": "cd server && python server.py",
    "admin": "cd admin-dashboard && npm run dev",
    "dev": "concurrently \"npm run backend\" \"npm run mobile\"",
    "start": "npm run dev",
    "install-all": "npm install && npm run install-mobile",
    "install-mobile": "cd mobile && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
